validate() {
    const fileInput = this.shadowRoot.querySelector('sc-file-input');
    const checkbox = this.shadowRoot.querySelector('sc-checkbox-group');
    let isValid = true;

    // Validate file input
    const hasFile = this.file.length > 0;
    fileInput.setAttribute('error-message', hasFile ? '' : 'Upload file is required.');
    isValid = isValid && hasFile;

    // Validate checkbox selection
    const hasSelection = this.pickList.length > 0;
    checkbox.setAttribute('error-message', hasSelection ? '' : 'Please select at least one.');
    isValid = isValid && hasSelection;

    return isValid;
}

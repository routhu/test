validateRequiredField() {
    const dropdown = this.shadowRoot.querySelector('sc-dropdown-input');
    const textInput = this.shadowRoot.querySelector('sc-text-input');
    let isValid = true;

    // Helper function to validate a field
    const validateField = (field) => {
        const isFieldValid = !!field.value;
        field.setAttribute('error-message', isFieldValid ? '' : 'This field is required.');
        return isFieldValid;
    };

    // Validate each field
    isValid = validateField(dropdown) && isValid;
    isValid = validateField(textInput) && isValid;

    return isValid;
}

handleDropdownChange(event, index) {
    const selectedValue = event.target.value;

    // Find the selected workbasket row from the dropdown data
    const selectWorkbasketRow = this.workBasketList.find(
        (item) => item.workbasket === selectedValue
    ) || {};

    // Extract workbasket label and unique name
    const workbasketLabel = selectWorkbasketRow.label || '';
    const uniqueWorkbasket = selectWorkbasketRow.workbasket || '';

    // Update the specific row with the selected dropdown value and related data
    this.rows = this.rows.map((row, i) =>
        i === index
            ? {
                  ...row,
                  selectedWBdropdown: selectedValue,
                  workbasketLabel: workbasketLabel,
                  uniqueWorkbasket: uniqueWorkbasket,
              }
            : row
    );

    // Trigger re-render
    this.requestUpdate();
}

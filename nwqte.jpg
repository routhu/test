validateRequiredField() {
        const dropdown = this.shadowRoot.querySelector('sc-dropdown-input');
        const textInput = this.shadowRoot.querySelector('sc-text-input');
        let isValid = true;

        if (!dropdown.value || !textInput.value) {
            dropdown.setAttribute('error-message', 'This field is required.');
            textInput.setAttribute('error-message', 'This field is required.');
            isValid = false;
        } else {
            textInput.setAttribute('error-message', '');
            dropdown.setAttribute('error-message', '');
        }

        return isValid;
    }

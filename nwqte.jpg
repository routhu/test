validateSLAInput() {
            // Clear previous validation errors
            this.formValidationErrors.nearSLA = [];
            this.formValidationErrors.breachSLA = [];

            let isValid = true;

            // Validate nearSLA field
            if (!this.nearSLA || this.nearSLA === 0) {
                this.formValidationErrors.nearSLA.push('This field is required');
                isValid = false;
            }

            // Validate breachSLA field
            if (!this.breachSLA || this.breachSLA === 0) {
                this.formValidationErrors.breachSLA.push('This field is required');
                isValid = false;
            }

            // Business Logic Validation: NearSLA must not be greater than BreachSLA
            if (this.nearSLA >= this.breachSLA) {
                this.formValidationErrors.nearSLA.push('Nearing SLA Cannot be greater than Breached SLA');
                this.formValidationErrors.breachSLA.push('Breached SLA Cannot be less than or equal to Nearing SLA');
                isValid = false;
            }

            return isValid;
        },
